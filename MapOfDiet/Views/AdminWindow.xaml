<Window x:Class="MapOfDiet.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MapOfDiet.ViewModels"
        xmlns:conv="clr-namespace:MapOfDiet.Converters"
        Title="AdminWindow" Height="685" Width="1200"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <conv:PositiveDoubleToBoolConverter x:Key="PositiveDoubleToBoolConverter"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#008ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="0.5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl TabStripPlacement="Bottom" Background="#252526" Foreground="White">
            <TabItem Header="Добавить рецепт">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="222*"/>
                            <ColumnDefinition Width="805*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="600"/>
                            <RowDefinition Height="600"/>
                            <RowDefinition Height="300"/>
                            <RowDefinition Height="300"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="1" Grid.Column="0"/>
                        <Border Grid.Row="1" Grid.Column="1"/>
                        <Border Grid.Row="2" Grid.Column="0"/>
                        <Border Grid.Row="2" Grid.Column="1"/>
                        <Border Grid.Row="3" Grid.Column="0"/>
                        <Border Grid.Row="3" Grid.Column="1"/>
                        <Border Grid.Row="4" Grid.Column="0"/>
                        <Border Grid.Row="4" Grid.Column="1"/>
                        <Border Grid.Row="5" Grid.Column="0"/>
                        <Border Grid.Row="5" Grid.Column="1"/>
                        <Border Grid.Row="6" Grid.Column="0"/>
                        <Border Grid.Row="6" Grid.Column="1"/>
                        <Border Grid.Row="7" Grid.Column="0"/>
                        <Border Grid.Row="7" Grid.Column="1"/>
                        <Border Grid.Row="8" Grid.Column="0"/>
                        <Border Grid.Row="8" Grid.Column="1"/>

                        <Label Content="Добавить рецепт" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"
                               HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="30" Foreground="White"/>

                        <TextBlock Text="Название" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding Name}" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Калорийность (на 100г.)" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="30" TextWrapping="Wrap"/>
                        <TextBox Text="{Binding Calories}" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Белки (на 100г.)" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding Proteins}" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Жиры (на 100г.)" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding Fats}" Grid.Row="4" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Углеводы (на 100г.)" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" TextWrapping="Wrap" TextAlignment="Center"/>
                        <TextBox Text="{Binding Carbohydrates}" Grid.Row="5" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Категории" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
                        <StackPanel Grid.Row="6" Grid.Column="1" Margin="15, 15, 15, 15">
                            <TextBlock Text="Поиск категорий:" FontSize="20"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding SearchCategory}" Width="350" FontSize="20"/>
                                <Button Content="Поиск" Command="{Binding SearchCategoriesCommand}" Width="120"/>
                            </StackPanel>
                            <TextBlock Text="Найденные результаты:" FontSize="20"/>
                            <ListBox ItemsSource="{Binding SearchResultsCategories}" Height="250">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" Width="200"/>
                                            <Button Content="Добавить"
                                            Command="{Binding DataContext.AddCategoryCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <TextBlock Text="Выбранные категории:" FontSize="20"/>
                            <ListBox ItemsSource="{Binding SelectedCategories}" Height="250">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}" Width="200"/>
                                            <Button Content="Удалить"
                                            Command="{Binding DataContext.RemoveCategoryCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>

                        <TextBlock Text="Ингредиенты" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"/>
                        <StackPanel Grid.Row="7" Grid.Column="1" Margin="15, 15, 15, 15">
                            <TextBlock Text="Поиск ингридиентов:" FontSize="20"/>
                            <StackPanel Orientation="Horizontal" Cursor="">
                                <TextBox Text="{Binding SearchIngredient}" Width="350" FontSize="20"/>
                                <Button Content="Поиск" Command="{Binding SearchIngredientsCommand}" Width="120"/>
                            </StackPanel>
                            <TextBlock Text="Найденные результаты:" FontSize="20"/>
                            <ListBox ItemsSource="{Binding SearchResultsIngredients}" Height="250">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="200">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} ({1})">
                                                        <Binding Path="Name"/>
                                                        <Binding Path="MeasureName"/>
                                                    </MultiBinding>
                                                </TextBlock.Text> 
                                            </TextBlock>
                                            <Button Content="Добавить"
                                            Command="{Binding DataContext.AddIngredientCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                            CommandParameter="{Binding}"
                                            IsEnabled="{Binding DataContext.MassIngredient, RelativeSource={RelativeSource AncestorType=ListBox}, Converter={StaticResource PositiveDoubleToBoolConverter}}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <TextBlock Text="Масса ингридиента" FontSize="30" TextWrapping="Wrap" TextAlignment="Center"/>
                            <TextBox Text="{Binding MassIngredient}"/>


                            <TextBlock Text="Выбранные ингредиенты:" FontSize="30" TextWrapping="Wrap" TextAlignment="Center"/>
                            <ListBox ItemsSource="{Binding SelectedIngredients}" Height="250">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Width="200">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} - {1} {2}">
                                                        <Binding Path="Name"/>
                                                        <Binding Path="Mass"/>
                                                        <Binding Path="MeasureName"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                            <Button Content="Удалить" Command="{Binding DataContext.RemoveIngredientCommand, RelativeSource={RelativeSource AncestorType=ListBox}}" CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>

                        <TextBlock Text="Описание" Grid.Row="8" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding Description}" Grid.Row="8" Grid.Column="1" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" FontSize="20"/>

                        <TextBlock Text="Описание процесса приготовления" Grid.Row="9" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap"  FontSize="30"/>
                        <TextBox Text="{Binding CookingDescription}" Grid.Row="9" Grid.Column="1" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" FontSize="20"/>

                        <Button Content="Сохранить рецепт" Command="{Binding SaveRecipeCommand}" Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Добавить категорию">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="222*"/>
                            <ColumnDefinition Width="805*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="400"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1 -->
                        <Border  Grid.Row="1" Grid.Column="0"/>
                        <Border  Grid.Row="1" Grid.Column="1"/>
                        <!-- Row 2 -->
                        <Border  Grid.Row="2" Grid.Column="0"/>
                        <Border  Grid.Row="2" Grid.Column="1"/>

                        <TextBlock Text="Добавить категорию" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>

                        <TextBlock Text="Название" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding NameCategory}" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>
                        
                        <TextBlock Text="Описание" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding DescriptionCategory}" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" FontSize="20" Margin="15, 15, 15, 15"/>

                        <Button Content="Сохранить категорию" Command="{Binding SaveCategoryCommand}" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Добавить ингридиент">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="222*"/>
                            <ColumnDefinition Width="805*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="400"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1 -->
                        <Border  Grid.Row="1" Grid.Column="0"/>
                        <Border  Grid.Row="1" Grid.Column="1"/>
                        <!-- Row 2 -->
                        <Border  Grid.Row="2" Grid.Column="0"/>
                        <Border  Grid.Row="2" Grid.Column="1"/>
                        <!-- Row 3 -->
                        <Border  Grid.Row="3" Grid.Column="0"/>
                        <Border  Grid.Row="3" Grid.Column="1"/>

                        <TextBlock Text="Добавить ингредиент" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>

                        <TextBlock Text="Название" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding NameIngredient}" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Описание" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding DescriptionIngredient}" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Название единицы измерения" TextWrapping="Wrap" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" TextAlignment="Center"/>
                        <TextBox Text="{Binding MeasureNameIngredient}" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <Button Content="Сохранить категорию" Command="{Binding SaveIngredientCommand}" Grid.Row="4" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Добавить физическую активность">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="222*"/>
                            <ColumnDefinition Width="805*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="60"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="400"/>
                            <RowDefinition Height="200"/>
                            <RowDefinition Height="300"/>
                            <RowDefinition Height="80"/>
                        </Grid.RowDefinitions>

                        <!-- Row 1 -->
                        <Border  Grid.Row="1" Grid.Column="0"/>
                        <Border  Grid.Row="1" Grid.Column="1"/>
                        <!-- Row 2 -->
                        <Border  Grid.Row="2" Grid.Column="0"/>
                        <Border  Grid.Row="2" Grid.Column="1"/>
                        <!-- Row 3 -->
                        <Border  Grid.Row="3" Grid.Column="0"/>
                        <Border  Grid.Row="3" Grid.Column="1"/>
                        <!-- Row 4 -->
                        <Border  Grid.Row="4" Grid.Column="0"/>
                        <Border  Grid.Row="4" Grid.Column="1"/>

                        <TextBlock Text="Добавить физическую активность" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40"/>

                        <TextBlock Text="Название" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding NameActivity}" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Описание" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding DescriptionActivity}" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Название единицы измерения" TextWrapping="Wrap" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding MeasureNameActivity}" Grid.Row="3" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Margin="15, 15, 15, 15"/>

                        <TextBlock Text="Сколько калорий тратится при совершении 100 ед. измерения" TextWrapping="Wrap" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="30"/>
                        <TextBox Text="{Binding MeasureToCaloriesActivity}" Grid.Row="4" Grid.Column="1" VerticalContentAlignment="Center" FontSize="20" Cursor="" Margin="15, 15, 15, 15"/>

                        <Button Content="Сохранить категорию" Command="{Binding SaveActivityCommand}" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"
                                IsEnabled="{Binding MeasureToCaloriesActivity, Converter={StaticResource PositiveDoubleToBoolConverter}}"/>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
