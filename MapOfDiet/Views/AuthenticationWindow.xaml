<Window x:Class="MapOfDiet.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MapOfDiet"
        mc:Ignorable="d"
        Title="AuthenticationWindow" Height="675" Width="1200"
        Background="#1E1E1E" Foreground="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#008ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="Authentication" Visibility="Visible" Grid.RowSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="82"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="630"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="BackgroundRect" Stroke="Black" RadiusX="10" RadiusY="10"
            Fill="#2D3E50" Margin="12,10,12,6"
            Grid.RowSpan="4" Grid.Column="1" Grid.Row="1"/>

        <Grid x:Name="EnterLoginPassword" Visibility="Visible" Grid.Row="2" Grid.Column="1">
            <TextBlock Text="Логин:" Margin="40,20,0,0" VerticalAlignment="Top"
                FontSize="33" FontFamily="Arial" Height="40" Width="108" HorizontalAlignment="Left"/>
            <TextBlock Text="Пароль:" HorizontalAlignment="Left" Margin="40,150,0,0"
                VerticalAlignment="Top" FontSize="33" FontFamily="Arial" Height="50" Width="135"/>
            <TextBox x:Name="LoginBox" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top"
                VerticalContentAlignment="Center" Width="550" Height="60" FontSize="27"/>
            <PasswordBox x:Name="PasswordBox"
                HorizontalAlignment="Center" Margin="0,197,0,0"
                VerticalAlignment="Top" VerticalContentAlignment="Center"
                Width="550" Height="60" FontSize="27"/>
        </Grid>

        <Grid x:Name="ForAuthorization"
            Visibility="Visible"
            Grid.RowSpan="4" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Top"
                FontSize="33" FontFamily="Arial" Height="60" Width="225" Margin="20,21,0,0"/>
            <Button Content="Войти" HorizontalAlignment="Center" Margin="0,404,0,0"
                VerticalAlignment="Top" Height="60" Width="334"
                FontFamily="Bahnschrift" FontSize="27"
                Click="Authorization_Click"/>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="455,539,0,0" TextWrapping="Wrap" Height="30" Width="150" FontSize="24">
                <Hyperlink Click="HyperlinkToRegistration_Click">
                    <Run Text="Регистрация"/>
                </Hyperlink>
            </TextBlock>
        </Grid>

        <Grid x:Name="ForRegistration"
            Visibility="Collapsed"
            Grid.RowSpan="4" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Top"
                FontSize="33" FontFamily="Arial" Height="60" Width="225" Margin="20,21,0,0"/>
            <Button Content="Зарегистрироваться" HorizontalAlignment="Center" VerticalAlignment="Top"
                Height="60" Width="334" FontFamily="Bahnschrift" FontSize="27"
                Margin="0,404,0,0" Click="Registration_Click"/>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="455,539,0,0" TextWrapping="Wrap" Height="32" Width="150" FontSize="24">
                <Hyperlink Click="HyperlinkToAuthorization_Click">
                    Авторизация
                </Hyperlink>
            </TextBlock>
        </Grid>

    </Grid>
</Window>
